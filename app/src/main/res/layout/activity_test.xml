<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.TestActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="테스트 페이지" />

    <Button
        app:layout_constraintBottom_toTopOf="@id/btn_object_distance"
        android:id="@+id/btn_object_detect"
        android:text="텐서플로 물체 감지 (X)"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp" />

    <Button
        app:layout_constraintBottom_toTopOf="@id/btn_request_device"
        android:id="@+id/btn_object_distance"
        android:text="거리 측정 (O)"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp" />

    <Button
        app:layout_constraintBottom_toTopOf="@id/btn_request_permission"
        android:id="@+id/btn_request_device"
        android:text="디바이스 권한 요청"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp" />

    <Button
        android:id="@+id/btn_request_permission"
        android:text="스마트폰 권한 요청"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>