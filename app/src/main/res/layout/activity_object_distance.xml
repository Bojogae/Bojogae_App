<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.ObjectDistanceActivity"
    android:id="@+id/constraint_layout">

    <FrameLayout
        android:id="@+id/frame_layout_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frame_layout_result_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frame_layout_right">

        <com.serenegiant.usb.widget.UVCCameraTextureView
            android:layout_gravity="center"
            android:id="@+id/camera_view_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frame_layout_result_right"
        app:layout_constraintStart_toEndOf="@id/frame_layout_left"
        app:layout_constraintEnd_toEndOf="parent" >

        <com.serenegiant.usb.widget.UVCCameraTextureView
            android:layout_gravity="center"
            android:id="@+id/camera_view_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout_result_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame_layout_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frame_layout_right">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/camera_view_result_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout_result_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame_layout_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/frame_layout_left"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/camera_view_result_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>