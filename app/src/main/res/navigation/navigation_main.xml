<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="com.bojogae.bojogae_app.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bojogae.bojogae_app.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_guideFragment"
            app:destination="@id/guideFragment" />

        <action
            android:id="@+id/action_homeFragment_to_walkStartPhoneFragment"
            app:destination="@id/walkStartPhoneFragment" />

        <action
            android:id="@+id/action_homeFragment_to_walkStartCarFragment"
            app:destination="@id/walkStartCarFragment" />

        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />

    </fragment>
    <fragment
        android:id="@+id/guideFragment"
        android:name="com.bojogae.bojogae_app.ui.guide.GuideFragment"
        android:label="fragment_guide"
        tools:layout="@layout/fragment_guide" >
        <action
            android:id="@+id/action_guideFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/walkStartPhoneFragment"
        android:name="com.bojogae.bojogae_app.ui.walk.WalkStartPhoneFragment"
        android:label="fragment_walk_start"
        tools:layout="@layout/fragment_walk_start_phone" >
        <action
            android:id="@+id/action_walkStartPhoneFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/walkStartCarFragment"
        android:name="com.bojogae.bojogae_app.ui.walk.WalkStartCarFragment"
        android:label="fragment_walk_start"
        tools:layout="@layout/fragment_walk_start_car" >
        <action
            android:id="@+id/action_walkStartCarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.bojogae.bojogae_app.ui.setting.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>