<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_button.xml -->
<!-- res/drawable/rounded_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭됐을 때의 배경 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 흰색 배경 -->
            <corners android:radius="15dp"/>
            <stroke android:color="#000000" android:width="2dp"/> <!-- 검은색 태두리 -->
        </shape>
    </item>
    <!-- 기본 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- 검은색 배경 -->
            <corners android:radius="15dp"/>
            <stroke android:color="#FFFFFF" android:width="2dp"/> <!-- 흰색 태두리 -->
        </shape>
    </item>
</selector>
